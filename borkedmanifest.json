{
  "name": "TweetPuller by Jane Ullah",
  "version": "0.5",
  "manifest_version": 2,
  "description": "Displays the last 10 - 40 tweets from the username provided to the program. Configurable via the Options page.",
  "browser_action": {
      "default_icon": "icon16.png",
      "default_popup": "tweets.html",
      "default_title": "TweetPuller by Jane Ullah"
  },
  "background" : {
    "scripts": ["background.js"]
  },
  "icons": { "16": "icon16.png",
              "48": "icon48.png",
              "128": "icon128.png" },
  "options_page":"options.html",
  "permissions": [
  "http://*.twitter.com/",
  "https://*.twitter.com/",
  "unlimitedStorage"
  ],
  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["contentscript.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
   "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
